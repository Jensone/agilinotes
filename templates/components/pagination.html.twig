{% if pageCount > 1 %}
	<div class="inline-block">
		<div class="flex items-baseline flex-row border border-gray-400 rounded-sm w-auto">
			{% if first is defined and current != first %}
				<span class="bg-white text-dark-600 px-3 py-2 text-lg border-r border-gray-400 font-bold">
					<a href="{{ path(route, query|merge({(pageParameterName): first})) }}">
                        &larr;
                    </a>
				</span>
			{% endif %}

			{% for page in pagesInRange %}
				{% if page != current %}
					<span class="bg-white text-dark-600 px-3 py-2 text-lg border-r border-gray-400">
						<a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
					</span>
				{% else %}
					<span class="bg-gray-900 text-white px-3 py-2 text-lg font-bold">{{ page }}</span>
				{% endif %}
			{% endfor %}

			{% if last is defined and current != last %}
				<span class="bg-white text-dark-600 px-3 py-2 text-lg border-gray-400 font-bold">
					<a href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                        &rarr;
                    </a>
				</span>
			{% endif %}
		</div>
	</div>
{% endif %}
